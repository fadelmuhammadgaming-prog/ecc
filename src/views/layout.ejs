<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Executive Command Center</title>
  
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    * {
      font-family: 'Inter', sans-serif;
    }
    
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }
    
    .sidebar {
      background: linear-gradient(180deg, #1e3c72 0%, #2a5298 100%);
      min-height: 100vh;
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
    }
    
    .sidebar .nav-link {
      color: rgba(255,255,255,0.8);
      padding: 12px 20px;
      margin: 5px 10px;
      border-radius: 8px;
      transition: all 0.3s;
    }
    
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
      background: rgba(255,255,255,0.1);
      color: white;
      transform: translateX(5px);
    }
    
    .sidebar .nav-link i {
      margin-right: 10px;
      font-size: 1.1rem;
    }
    
    .main-content {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
      padding: 30px;
      margin: 20px;
    }
    
    .stat-card {
      border-radius: 15px;
      padding: 25px;
      color: white;
      transition: transform 0.3s;
      border: none;
    }
    
    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    
    .stat-card .icon {
      font-size: 2.5rem;
      opacity: 0.8;
    }
    
    .stat-card h3 {
      font-size: 2.5rem;
      font-weight: 700;
      margin: 10px 0;
    }
    
    .stat-card p {
      margin: 0;
      opacity: 0.9;
      font-size: 0.95rem;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      padding: 10px 25px;
      border-radius: 10px;
      transition: all 0.3s;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    
    .table {
      border-radius: 10px;
      overflow: hidden;
    }
    
    .table thead {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }
    
    .badge {
      padding: 6px 12px;
      border-radius: 6px;
    }
    
    .page-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 20px;
      border-radius: 15px;
      margin-bottom: 30px;
    }
    
    .page-header h1 {
      margin: 0;
      font-weight: 700;
    }
    
    .page-header p {
      margin: 5px 0 0 0;
      opacity: 0.9;
    }
    
    /* User Info & Logout Styling */
    .user-info-card {
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.1);
      transition: all 0.3s;
    }
    
    .user-info-card:hover {
      background: rgba(255,255,255,0.15) !important;
      transform: translateY(-2px);
    }
    
    .user-info-card .avatar {
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }
    
    .btn-logout {
      background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
      color: white;
      border: none;
      border-radius: 10px;
      transition: all 0.3s;
      font-weight: 500;
      text-decoration: none;
      display: block;
      width: 100%;
      padding: 10px 20px;
    }
    
    .btn-logout:hover {
      background: linear-gradient(135deg, #ee5a6f 0%, #c92a2a 100%);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(238, 90, 111, 0.4);
    }
    
    .btn-logout i {
      font-size: 1.1rem;
    }
    
    .role-badge .badge {
      font-weight: 600;
      letter-spacing: 0.5px;
      padding: 5px 12px;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 sidebar p-0">
        <div class="p-4 text-white">
          <h4 class="mb-0"><i class="bi bi-buildings-fill"></i> ECC</h4>
          <small class="text-white-50">Executive Command Center</small>
        </div>
        <nav class="nav flex-column mt-3">
          <a class="nav-link <%= title === 'Dashboard' ? 'active' : '' %>" href="/">
            <i class="bi bi-speedometer2"></i> Dashboard
          </a>
          <a class="nav-link <%= title === 'Agenda' ? 'active' : '' %>" href="/agenda">
            <i class="bi bi-calendar-event"></i> Agenda
          </a>
          <a class="nav-link <%= title === 'Surat' ? 'active' : '' %>" href="/surat">
            <i class="bi bi-envelope-fill"></i> Surat
          </a>
          <a class="nav-link <%= title === 'Kontak' ? 'active' : '' %>" href="/contact">
            <i class="bi bi-person-lines-fill"></i> Kontak
          </a>
          <a class="nav-link <%= title === 'Anggaran' ? 'active' : '' %>" href="/anggaran">
            <i class="bi bi-cash-stack"></i> Anggaran
          </a>
          <a class="nav-link <%= title === 'Protokol' ? 'active' : '' %>" href="/protokol">
            <i class="bi bi-file-earmark-text"></i> Protokol
          </a>
          <a class="nav-link <%= title === 'Users' ? 'active' : '' %>" href="/users">
            <i class="bi bi-people-fill"></i> Users
          </a>
          
          <!-- User Info & Logout -->
          <div class="mt-auto pt-4 border-top border-light border-opacity-25" style="margin-top: auto;">
            <% if (typeof user !== 'undefined' && user) { %>
              <div class="user-info-card bg-white bg-opacity-10 rounded-3 p-3 mx-3 mb-3">
                <small class="text-white-50 d-block mb-2">
                  <i class="bi bi-person-badge me-1"></i>Logged in as
                </small>
                <div class="d-flex align-items-center mb-2">
                  <div class="avatar bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px; font-size: 1.2rem;">
                    <i class="bi bi-person-fill"></i>
                  </div>
                  <div class="flex-grow-1">
                    <div class="text-white fw-bold"><%= user.nama || user.username %></div>
                    <div class="text-white-50 small">@<%= user.username %></div>
                  </div>
                </div>
                <div class="role-badge">
                  <% if (user.role === 'SEKRETARIS') { %>
                    <span class="badge" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 0.7rem;">
                      <i class="bi bi-briefcase-fill me-1"></i><%= user.role %>
                    </span>
                  <% } else if (user.role === 'PROTOKOLER') { %>
                    <span class="badge bg-success" style="font-size: 0.7rem;">
                      <i class="bi bi-calendar-check-fill me-1"></i><%= user.role %>
                    </span>
                  <% } else if (user.role === 'DIREKSI') { %>
                    <span class="badge bg-warning text-dark" style="font-size: 0.7rem;">
                      <i class="bi bi-star-fill me-1"></i><%= user.role %>
                    </span>
                  <% } else if (user.role === 'PA') { %>
                    <span class="badge bg-info" style="font-size: 0.7rem;">
                      <i class="bi bi-person-check-fill me-1"></i><%= user.role %>
                    </span>
                  <% } else { %>
                    <span class="badge bg-secondary" style="font-size: 0.7rem;">
                      <i class="bi bi-person-fill me-1"></i><%= user.role %>
                    </span>
                  <% } %>
                </div>
              </div>
            <% } %>
            <div class="px-3">
              <a class="btn btn-logout text-center py-2" href="/logout" onclick="return confirm('Yakin ingin logout?')">
                <i class="bi bi-box-arrow-right me-2"></i>
                <strong>Logout</strong>
              </a>
            </div>
          </div>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="col-md-10">
        <div class="main-content">
          <%- body %>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Page specific scripts -->
  <%- script %>
  
  <script>
    // Add smooth animations
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.stat-card, .card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
          card.style.transition = 'all 0.5s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });
  </script>
</body>
</html>
